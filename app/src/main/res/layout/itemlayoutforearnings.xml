<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/new_text"
            android:textColor="@color/colorText"
            android:textSize="14dp"
            geekui:customTypeface="OpenSans_Regular.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/total_rides"
                android:textColor="@color/colorText"
                android:textSize="13dp"
                geekui:customTypeface="OpenSans_Regular.ttf" />

            <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
                android:id="@+id/tv_rides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="14dp"
                geekui:customTypeface="OpenSans_Regular.ttf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/total_earning"
                android:textColor="@color/colorText"
                android:textSize="13dp"
                geekui:customTypeface="OpenSans_Regular.ttf" />

            <com.apporio.demotaxiappdriver.typeface.TypefaceTextView
                android:id="@+id/tv_earnings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="15dp"
                geekui:customTypeface="OpenSans_Regular.ttf" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorView" />
</LinearLayout>
